---
import "../styles/global.css";

const { title } = Astro.props;
const pathname = Astro.url.pathname;

// Configuration des breadcrumbs selon la route
let crumbs = [];

if (pathname === "/generator") {
  crumbs = [
    { href: "/", label: "Accueil" },
    { label: "Générateur de SVG", active: true }
  ];
}	

if (pathname === "/saved") {
  crumbs = [
    { href: "/", label: "Accueil" },
    { href: "/generator", label: "Générateur de SVG" },
    { label: "Mes SVG", active: true }
  ];
}
---
<!doctype html>
<html lang="en" data-theme="light" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="h-full">
		<div class="h-full flex flex-col min-h-0">
			<div class="flex-1 min-h-0">
				<slot />
			</div>
		</div>
	</body>
</html>